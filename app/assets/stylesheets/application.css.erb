.navbar{
	margin: 0;
}

.navbar-brand>img{
	height: 50px;
}
.navbar-brand{
	padding: 0 5px;
}

body{
	background: url(<%= asset_path "material_02.jpg" %>) no-repeat;
	background-size: cover;
}

.jumbotron{
	background: url(<%= asset_path "jthands.jpg" %>) no-repeat;
	background-size: cover;
}

.jumbotron>.container>h1{
	color: #44140a;
}

.side-bar{
	background: lightblue;
	padding: 10px;
}

.content{
	background: rgba(255, 255, 255, .5);
padding: 1px 20px 20px 20px;}

.order{
	float: left;
}

.invisible{
	visibility: hidden;
}

.event-box{
	list-style: none;
	margin-left: -40px;
}

.home-img{
	width: 50%;
	float: left;
	margin-right: 10px;
	margin-bottom: 10px;
}

.about-img{
	float: left;
	margin-right: 10px;
	margin-bottom: 10px;
}

.testimonial-img{
	float: right;
	margin-left: 10px;
	margin-bottom: 10px;
	width: 25%;
}

a, a:hover, a:visited{
	color: inherit;
	text-decoration: none;
	background: none;
}

#topnavbar.affix {
    position: fixed;
    top: 0;
    width: 100%;
}

.jumbotron{
	margin-bottom: 0;
}

.navbar{
	margin-bottom: 30px;
}

.services-img {
	float: right;
	margin-left: 10px;
	margin-bottom: 5px;
	width: 35%;
}

.welcome-home-img {
float: right;
margin-left: 10px;
margin-bottom: 5px;
width: 50%;
}