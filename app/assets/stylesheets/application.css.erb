 #nav.affix {
    position: fixed;
    top: 0;
    width: 100%;
    z-index:10;
}

.navbar{
	margin: 0;
}

.navbar-brand>img{
	height: 40px;
	margin-top: 5px;
}

.navbar-brand{
	padding: 0 5px;
}

body{
	background: url(<%= asset_path "mountains.jpg" %>) no-repeat center center fixed;
	background-size: cover;
}

.jumbotron{
	background: url(<%= asset_path "jthandslite.png" %>) no-repeat;
	background-size: cover;
	margin-bottom: 0;
	padding: 10px;
}


.jtcontent>img, .jtcontent>h3{
	width: 75%;
	background: rgba(255, 255, 255, .5);
	padding: 10px;
	border-radius: 10px;
	text-align: center;
}

.side-bar{
	background: lightblue;
	padding: 10px;
}

.content{
	background: rgba(255, 255, 255, .85);
	padding: 1px 20px 20px 20px;}

.order{
	float: left;
}

.invisible{
	visibility: hidden;
}

.event-box{
